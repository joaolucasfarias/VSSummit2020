@page
@model VSSummit2020.Pages.Relatorios.SaidaModel
@{
}

<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table mr-1"></i>
        Relatório real de saídas reais de casos reais
    </div>
    <div class="col col-4">
        <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#collapseFilter" aria-expanded="false" aria-controls="collapseFilter">
            Filtro
        </button>
        <div class="collapse" id="collapseFilter">
            <div class="card card-body">
                <form>
                    <div class="form-group">
                        <label>Data inicial:</label>
                        <input type="date" name="startDate" max="2020-12-31"
                               min="2020-01-01" class="form-control" value="@Model.StartDate">
                    </div>
                    <div class="form-group">
                        <label>Data final:</label>
                        <input type="date" name="finalDate" min="2020-01-01"
                               max="2020-12-31" class="form-control" value="@Model.FinalDate">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary mb-2">Filtrar</button>
                    </div>
                </form>
            </div>
        </div>

    </div>

    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Produto</th>
                        <th>Quantidade</th>
                        <th>Valor</th>
                        <th>Total</th>
                        <th>Data da movimentação</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Produto</th>
                        <th>Quantidade</th>
                        <th>Valor</th>
                        <th>Total</th>
                        <th>Data da movimentação</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var realInformation in Model.RealInformations)
                    {
                        <tr>
                            <td>@realInformation.Product</td>
                            <td>@realInformation.Quantity</td>
                            <td>@realInformation.Value</td>
                            <td>@realInformation.Total</td>
                            <td>@realInformation.Date.ToShortDateString()</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>